<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.3.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

    <!-- 1、注解扫描位置 -->
    <mvc:annotation-driven/>
    <context:component-scan base-package="com.yxy.edu.web.controller"/>

    <!-- 静态文件扫描-->
    <mvc:resources mapping="/css/**" location="/css/"/>
    <mvc:resources mapping="/font/**" location="/font/"/>
    <mvc:resources mapping="/img/**" location="img/"/>
    <mvc:resources mapping="/js/**" location="/js/"/>
    <mvc:resources mapping="/managerstyle/**" location="/managerstyle/"/>
    <mvc:resources mapping="/userstyle/**" location="/userstyle/"/>


    <!-- 2、配置映射处理和适配器 配置json转换器 此处是为了转换后台数据为json格式返回至前台-->
    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
        <property name="messageConverters">
            <list>
                <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                    <property name="supportedMediaTypes">
                        <list>
                            <value>application/json;charset=UTF-8</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
